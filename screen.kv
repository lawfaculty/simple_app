<Main_Screen>:
    MDScreen:
        MDBoxLayout:
            MDBoxLayout:
                orientation:'vertical'
                md_bg_color:1,1,1
                RecycleView:
                    do_scroll: [False, True]
                    size_hint_y:1
                    height:self.parent.height - dp(100)
                    bar_width:0
                    smooth_scroll_end:10
                    scroll_type:['content']
                    MDGridLayout:
                        id:product_list
                        cols:2
                        size_hint_y:1
                        adaptive_height:True
                        # spacing:self.padding[0]
                        padding:dp(20)
                        MDLabel:
                            size_hint_y:None
                            id:label
                            text:'hello'
            Button:
                text:'signin'
                on_press:root.list()
            Button:
                text:'stream'
                on_press:root.stream()
            Button:
                text:'close stream'
                on_press:root.close_stream()